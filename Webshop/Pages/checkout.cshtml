@page
@model Webshop.Pages.checkoutModel
@{
}

<h4>Checkout</h4>

<p>
    <a asp-page="shoppingcart">Back to shopping cart</a>
</p>

<table>
    <tr>
        <th>Total: </th>
        <td>@Model.totalPrice</td>
    </tr>
</table>

<br />
<form method="post">
    <table>
        <tr>
            <td>
                <label asp-for="firstName">First name: </label>
            </td>
            <td>
                <input asp-for="firstName" type="text" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="lastName">Last name: </label>
            </td>
            <td>
                <input asp-for="lastName" type="text" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="address" width="40">Address: </label>
            </td>
            <td>
                <input asp-for="address" type="text" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="state">State: </label>
            </td>
            <td>
                <input asp-for="state" type="text" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="postcode">Postcode: </label>
            </td>
            <td>
                <input asp-for="postcode" type="number" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="phone">Phone: </label>
            </td>
            <td>
                <input asp-for="phone" type="text" />
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="email">Email: </label>
            </td>
            <td>
                <input asp-for="email" type="email" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="CHECK OUT" />
            </td>
        </tr>
    </table>
    <input type="hidden" asp-for="customerId" />
    <input type="hidden" asp-for="totalPrice" />
</form>