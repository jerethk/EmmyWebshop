@page
@model Webshop.Pages.loginModel
@{
}

<h4>Customer login</h4>

<p>
    <a href="Index">Back to home</a>
</p>

<table border="1">
    <tr>
        <td>
            <form method="post">
                <table cellpadding="4">
                    <tr>
                        <td>
                            <label asp-for="loginEmail">Your email: </label>
                        </td>
                        <td>
                            <input asp-for="loginEmail" type="email" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="password">Password: </label>
                        </td>
                        <td>
                            <input asp-for="password" type="password" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" value="Log in" />
                        </td>
                    </tr>
                </table>
            </form>
        </td>
    </tr>
</table>

<br />

@{
    if (Model.isLoginSuccessful == false)
    {
        <p>
            Incorrect login details
        </p>
    }
}

